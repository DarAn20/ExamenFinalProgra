@model WebApplication1.Models.Tarea
<!--Parte del disenos e logro gracias CHAT GPT-->
@{
    ViewData["Title"] = "Edit";
}

<h1>Actualizar datos de Tarea</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TareaID" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>

                <select asp-for="Estado"
                        asp-items="Html.GetEnumSelectList<EstadoTarea>()"
                        class="form-control">
                    <option value="">Seleccione el estado</option>
                </select>

                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dificultad" class="control-label"></label>

                <select asp-for="Dificultad"
                        asp-items="Html.GetEnumSelectList<DificultadTarea>()"
                        class="form-control">
                    <option value="">Seleccione la dificultad</option>
                </select>

                <span asp-validation-for="Dificultad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TiempoEstimadoHoras" class="control-label"></label>
                <input asp-for="TiempoEstimadoHoras" class="form-control" />
                <span asp-validation-for="TiempoEstimadoHoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaID" class="control-label"></label>
                <select asp-for="MetaID" class="form-control" asp-items="ViewBag.MetaID"></select>
                <span asp-validation-for="MetaID" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="mt-4 d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-secondary">
        ⬅️ Regresar
    </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
