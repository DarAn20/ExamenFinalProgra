@model WebApplication1.Models.Meta

@{
    ViewData["Title"] = "Create";
}



<h4>Meta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>

                <select asp-for="Categoria"
                        asp-items="Html.GetEnumSelectList<CategoriaMeta>()"
                        class="form-control">
                    <option value="">Seleccione una categoría</option>
                </select>

                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Prioridad" class="control-label"></label>
                <select asp-for="Prioridad"
                        asp-items="Html.GetEnumSelectList<PrioridadMeta>()"
                        class="form-control">
                    <option value="">Seleccione una prioridad</option>
                </select>
                <span asp-validation-for="Prioridad" class="text-danger"></span>
            </div>
            <div class="form-group">
    <label asp-for="Estado" class="control-label"></label>
    <select asp-for="Estado"
            asp-items="Html.GetEnumSelectList<EstadoMeta>()"
            class="form-control">
        <option value="">Seleccione un estado</option>
    </select>
    <span asp-validation-for="Estado" class="text-danger"></span>
</div>
            <div class="form-group my-4">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="mt-4 d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-secondary">
        ⬅️ Regresar
    </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
